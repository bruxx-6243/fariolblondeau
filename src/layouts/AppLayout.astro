---
import { ViewTransitions } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";

import "@fontsource/poppins";
import "@/styles/globals.css";

import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";

const { title, ogImage, description, ...props } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <BaseHead
      title={title}
      description={description}
      ogImage={ogImage}
      {...props}
    />
    <meta name="google-adsense-account" content="ca-pub-5312729323353192" />
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5312729323353192"
      crossorigin="anonymous"></script>
    <Analytics />
    <ViewTransitions />
  </head>

  <body class="antialiased font-poppins">
    <Header />

    <main class="pt-32 pb-10">
      <slot />
    </main>
  </body>
</html>
