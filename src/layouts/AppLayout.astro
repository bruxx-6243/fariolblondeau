---
import { ViewTransitions } from "astro:transitions";

import "@fontsource/poppins";
import "@/styles/globals.css";

import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";

const { title, ogImage, description, ...props } = Astro.props;

const GA_MEASUREMENT_ID = import.meta.env.GOOGLE_TRACKING_ID || "G-H4XJXPNZQ5";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      ogImage={ogImage}
      {...props}
    />
    <ViewTransitions />
  </head>

  <body class="antialiased mx-auto font-poppins">
    <Header />

    <main class="pt-32 pb-10">
      <slot />
    </main>

    <script
      define:vars={{ GA_MEASUREMENT_ID }}
      type="text/partytown"
      src=`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`
    >
      console.log("GA_MEASUREMENT_ID", GA_MEASUREMENT_ID);
    </script>
    <script type="text/partytown" define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", GA_MEASUREMENT_ID);

      console.log("GA_MEASUREMENT_ID", GA_MEASUREMENT_ID);
    </script>
  </body>
</html>
