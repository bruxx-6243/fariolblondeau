---
import { Image } from "astro:assets";

import AppLayout from "@/layouts/AppLayout.astro";
import { cn } from "@/lib/utils";

import { Author } from "@/data/constants";
import { technologies } from "@/data/technologies";

import Skill from "@/components/Skill.astro";
import ME from "@/content/images/author.jpg";
import Akieni from "@/content/images/Akieni.png";

const titleStyle = "font-bold tracking-tight text-4xl";
const FRONTEND =
  "I build frontend tools and experiment with new web app technologies.";
---

<AppLayout title={Author.name}>
  <div class="container">
    <div class="flex flex-col-reverse md:flex-row">
      <div class="flex-1 space-y-8">
        <div class="space-y-3">
          <p class="text-lg">
            <span
              class="text-3xl sm:text-4xl inline-block animate-rotate-hand origin-[70%_70%]"
              >üëã</span
            >
            <i>I'm_</i>
          </p>

          <h1 class={cn(titleStyle, "text-gradient w-fit inline-block")}>
            {Author.name}
          </h1>

          <p>
            Graduate student üéì in computer science at the <a
              href="http://ivanovo.ac.ru/"
              target="_blank"
              rel="noopener noreferrer"
              title="Visite the official website of Ivanovo State University"
              class="text-blue-600 dark:text-blue-400 underline"
              >University State of Ivanovo</a
            > in Russia.
          </p>

          <p>
            Welcome to my slice üçï of the internet. I'm a self-taught Software
            Developer, primary focused on the <span
              aria-hidden="true"
              title={FRONTEND}>front-end</span
            >.
          </p>
        </div>

        <div class="space-y-3">
          <h2 class="text-2xl font-semibold">Favorite technologies</h2>
          <p>
            I love exploring new libraries and JavaScript üíõ frameworks ‚öõÔ∏è. Here
            is a list of technologies that I have worked with.
          </p>
        </div>

        <ul class="grid grid-cols-2 gap-4 sm:grid-cols-3">
          {
            technologies.map((tech) => (
              <Skill text={tech.text} icon={tech.icon} />
            ))
          }
        </ul>
      </div>

      <div class="flex-1 py-8 mr-8 sm:py-0 sm:m-0">
        <div class="flex flex-col items-end sm:items-center space-y-12">
          <div class="h-full flex justify-end md:justify-center z-[1]">
            <div
              class="relative w-44 h-44 size aspect-square rounded-full overflow-hidden md:mt-16 ring-4 ring-blue-400 ring-offset-4 ring-offset-zinc-100 dark:ring-offset-zinc-900">
              <Image
                src={ME}
                alt={`${Author.name} avatar`}
                quality="high"
                format="webp"
                loading="eager"
                class="w-full object-cover animate-fade"
              />
            </div>
          </div>

          <div class="w-full max-w-[250px]">
            <a
              href="https://www.akieni.com/"
              rel="noopener noreferrer"
              target="_blank"
              title="Visite the official Akieni Website"
              class="block w-full bg-zinc-200/30 p-2 rounded dark:bg-zinc-800/30 border dark:border-zinc-600/50 shadow-md">
              <div class="flex items-center space-x-4">
                <Image
                  src={Akieni}
                  alt="Logo de Akieni"
                  quality="high"
                  format="webp"
                  loading="eager"
                  class="w-8 aspect-square rounded object-cover"
                />

                <div>
                  <h3 class="font-semibold text-sm">Akieni</h3>
                  <p class="text-xs italic">Software Developer</p>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
